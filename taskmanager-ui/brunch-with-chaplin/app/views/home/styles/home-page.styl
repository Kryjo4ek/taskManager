@import 'nib'

.background
  background #263748
  position fixed
  width 100%
  height 100%
  top 0
  z-index -100

#manager-container
  text-align center
  width 100%
  height 100%

  #column-name-container
    width 804px
    height 50px
    position:fixed
    left 50%
    margin-left -402px
    font-size 20px
    color white

    .header-task
      width 804px
      height 50px

      .property-button-task
        width 200px
        height: 50px
        float left
        border #3598DC
        margin-left 1px
        cursor pointer
        text-align center
        line-height @height
        background #3598DC

        transition-duration: 0.4s
        &:hover
          background #263748


      .property-button-status
        width 200px
        height: 50px
        float left
        border #3598DC
        margin-left 1px
        cursor pointer
        text-align center
        line-height @height
        transition-duration: 0.8s
        background #3598DC

        .menu-option-status
          height 50px
          width 200px
          position: relative
          top -1px
          left -1px
          overflow hidden
          transition(all, 0.4s)

          .option-status
            background #3598DC
            color #263748
            transition-duration: 0.2s
            &:hover
              background #263748
              color white



    .select-status
      width 200px
      height 50px

      .menu
        color white
        border-bot #3598DC

        height 50px
        overflow hidden
        &:hover
          height 500px


  #tasks-container
    display inline-block
    margin-top 50px
    margin-left 2px

    .task
      width 804px
      height 50px
      border-left 4px solid #F9E27B
      margin-top 2px

      .property-task
        background rgba( 255, 255, 255, 0.83)
        width 200px
        height 50px
        float left
        padding-left 20px
        text-align left
        line-height @height
        font-family 'Slabo 27px', serif
        font-size 22px
        color #001D39


      .delete-task
        margin 3% 30%
        width 40px
        height 40px




.modal-window
  width 100%
  height 100%
  background: rgba(0, 0, 0, 0.7)
  top 0
  left 0
  position fixed
  z-index 50


  .window
    background rgba( 255, 255, 255, 0.83)
    margin 102px auto
    width 400px
    height 260px

    .name-window
      width 400px
      height 50px
      line-height @height
      font-family 'Slabo 27px', serif
      font-size 35px
      color #3598DC

    #title
      width 300px
      height 25px
      float left
      border rgba( 59, 72, 77, 1 )
      padding-left 20px
      text-align left
      margin 10px 50px
      line-height @height
      font-family 'Slabo 27px', serif
      font-size 20px
      transition(all, 0.5s)
      color #AD5252
      &:hover
        border #3598DC


    .menu-option
      cursor pointer
      height 25px
      width 150px
      margin 50px 50px
      position: fixed
      background #FFFFFF
      border rgba( 59, 72, 77, 1 )
      overflow hidden
      text-align center
      line-height @height
      font-family 'Slabo 27px', serif
      font-size 21px
      color  rgba( 18, 21, 23, 1 )
      z-index 100
      transition(all, 0.5s)
      &:hover
        height 250px

      .option-top
        color #AD5252
        &:hover
          color #AD5252

      .option
        height 25px
        width 150px
        color #263748
        transition-duration: 0.2s
        &:hover
          background #263748
          color white

    #implementers
      margin 50px 200px
      z-index 90
      &:hover
        overflow: auto

      #implementer-top
        padding-left 18px

    .valid
      height 50px
      width 300px
      float left
      position relative
      left 50px
      top 50px
      background white
      white-space pre
      text-align center
      line-height 23px
      font-family 'Slabo 27px', serif
      font-size 12px
      transition(all, 0.5s)
      color #AD5252

    .button
      cursor pointer
      height 50px
      width 100px
      margin 60px 50px
      float left
      text-align center
      line-height @height
      font-family 'Slabo 27px', serif
      font-size 30px
      transition(all, 0.5s)
      color white
      background  #3598DC
      &:hover
        background #F9E27B
        color black

  .implementer-window
    height 220px

    .valid-implementer
      margin-top -40px
