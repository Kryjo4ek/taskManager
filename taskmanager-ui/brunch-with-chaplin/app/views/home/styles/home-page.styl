@import 'nib'

.background
  background #263748
  position fixed
  width 100%
  height 100%
  top 0
  z-index -100

#manager-container
  text-align center
  width 100%
  height 100%

  #column-name-container
    width 804px
    height 50px
    position:fixed
    left 50%
    margin-left -402px
    font-size 20px
    color white

    .header-task
      width 804px
      height 50px

      .property-button-task
        width 200px
        height: 50px
        float left
        border #3598DC
        margin-left 1px
        cursor pointer
        text-align center
        line-height @height
        background #3598DC

        transition-duration: 0.4s
        &:hover
          background #263748


      .property-button-status
        width 200px
        height: 50px
        float left
        border #3598DC
        margin-left 1px
        cursor pointer
        text-align center
        line-height @height
        transition-duration: 0.8s
        background #3598DC

        .menu-option-status
          height 50px
          width 200px
          position: relative
          top -1px
          left -1px
          overflow hidden
          transition(all, 0.4s)

          .option-status
            background #3598DC
            color #263748
            transition-duration: 0.2s
            &:hover
              background #263748
              color white



    .select-status
      width 200px
      height 50px

      .menu
        color white
        border-bot #3598DC

        height 50px
        overflow hidden
        &:hover
          height 500px


  #tasks-container
    display inline-block
    margin-top 50px
    margin-left 2px

    .task
      width 804px
      height 50px
      border-left 4px solid #F9E27B
      margin-top 2px

      .property-task
        background rgba( 249, 226, 123, 0.1)
        width 200px
        height 50px
        float left
        padding-left 20px
        text-align left
        line-height @height
        font-family 'Keania One', cursive;
        font-size 22px
        color #AD5252

      .delete-task
        margin 3% 30%
        width 40px
        height 40px




.modal-window
  width 100%
  height 100%
  background: rgba(0, 0, 0, 0.7)
  top 0
  left 0
  position fixed
  z-index 50

  .window
    background rgba( 59, 72, 77, 1 )
    margin 100px auto
    width 803px
    height 50px
    border-left 4px solid #F9E27B

    #title
      width 196px
      height 50px
      float left
      background rgba( 59, 72, 77, 1 )
      border rgba( 59, 72, 77, 0 )
      padding-left 20px
      text-align left
      line-height @height
      font-family 'Keania One', cursive;
      font-size 22px
      color #AD5252
      &:hover
        border #3598DC


    .menu-option-status
      height 50px
      width 200px
      position: relative
      display inline-block
      float left
      left 1px
      overflow hidden
      text-align center
      line-height @height
      font-family 'Keania One', cursive;
      font-size 22px
      color  rgba( 18, 21, 23, 1 )
      transition(all, 0.5s)
      &:hover
        background rgba( 18, 21, 23, 1 )
        height 511px
        //overflow scroll

      .option-status-top
        color #AD5252
        &:hover
          color #AD5252

      .option-status
        height 50px
        width 200px
        color #263748
        transition-duration: 0.2s
        &:hover
          background #263748
          color white

    #implementers
      height 50px
      width 200px
      position: relative
      display inline-block
      float left
      left 2px
      overflow hidden
      text-align center
      line-height @height
      font-family 'Keania One', cursive;
      font-size 22px
      color  rgba( 18, 21, 23, 1 )
      transition(all, 0.5s)
      &:hover
        background rgba( 18, 21, 23, 1 )
        height 511px
        overflow auto


      .implementer-top
        color #AD5252
        &:hover
          color #AD5252

      .implementer
        height 50px
        width 200px
        color #263748
        transition-duration: 0.2s
        &:hover
          background #263748
          color white

    .validAndButton
      height 50px
      width 201px
      float left
      position relative
      left 3px
      //left 2px
      .valid
        height 50px
        width 121px
        float left
        //text-align center
        line-height 10px
        font-family 'Keania One', cursive;
        font-size 18px
        transition(all, 0.5s)
        color #AD5252
        //background #AD5252
        //background white


      .button
        cursor pointer
        height 50px
        width 40px
        //background green
        float left
        text-align center
        line-height @height
        font-family 'Keania One', cursive;
        font-size 18px
        transition(all, 0.5s)
        color white
        background #AD5252

        &:hover
          background #F9E27B
          color black


