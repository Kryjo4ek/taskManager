@import 'nib'

.background
  background #263748
  position fixed
  width 100%
  height 100%
  top 0
  z-index -100

#manager-container
  text-align center
  width 100%
  height 100%
  //border green
  //border white
  //possition:relative

  #column-name-container
    width 800px
    height 100px
    position:fixed
    left 50%
    margin-left -400px
    font-size 20px
    color white


    .column-name-task
      text-align: center
      width 200px
      height: 50px
      line-height: @height
      //border #3598DC



    .property-button-task
      width 200px
      height 50px
      border #3598DC
      cursor pointer
      text-align center
      line-height @height
      transition-duration: 0.4s
      &:hover
        background #3598DC
        color #263748


    .select-status
      width 200px
      height 50px

      .menu
        color white
        border-bot #3598DC

        height 50px
        overflow hidden
        &:hover
          height 500px


  #tasks-container
    display inline-block
    margin-top 50px

.modal-window
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, 0.7)
  top: 0
  left: 0
  position: fixed
  z-index 100

  .window
    background: rgba(236, 231, 159, 1)
    margin: 150px auto
    width: 400px

  .task-window
    height: 300px

  .implementer-window
    height: 200px

  .status-filter-window
    height: 200px


.property-task
  margin-top 2px
  text-align: center
  background: white
  float: left
  width: 200px
  height: 50px
  line-height: @height





.delete-task
  width: 50px
  height: 50px
  background-color: white

